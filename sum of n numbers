import java.util.*;
 class reverse
{
    public static void main(String[] args)
    {
        int sum=0,i;
        Scanner sc= new Scanner(System.in);
        System.out.println("enter a number ");
        int num=sc.nextInt();
        for(i=1;i<=num;i++)
            sum=sum+i;        
       System.out.println("sum of numbers=" +sum);                
    }
}
